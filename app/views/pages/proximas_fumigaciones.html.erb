<div class="container" style="overflow-y: scroll; height:500px; overflow-x: scroll; width:100%">
  <table>
    <h3 class="my-5"><strong>Proximas fumigaciones a realizar</strong></h3>
      <thead>
      <tr>
        <th>Nro certificado</th>
        <th>Fecha Vencimiento</th>
        <th>Apellido</th>
        <th>Nombre</th>
        <th>Domicilio</th>
        <th>Rubro</th>
        <th>Barrio</th>
        <th>Tratamiento</th>
        <th>Vectores</th>
        <th>Superficie</th>
        <th>Veneno</th>
        <th>Fecha aplicacion</th>
        <th>Codigo</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @certificados.each do |certificado| %>
            <%if certificado.estado == true &&  certificado.hora_aplicacion != nil && certificado.fecha_vencimiento > Date.today%>
            <tr>
              <td><%= certificado.nro_certificado %></td>
              <td><%= certificado.fecha_vencimiento %></td>
              <td><%= certificado.cliente.apellido%></td>
              <td><%= certificado.cliente.nombre  %></td>
              <td><%= certificado.cliente.domicilio %></td>
              <td><%= certificado.cliente.rubro[0,15] %></td>
              <td><%= certificado.cliente.barrio %></td>
              <td><%= certificado.tratamiento %></td>
              <td><%= certificado.vector %></td>
              <td><%= certificado.superficie %></td>
              <td><%= certificado.droga  %></td>
              <td><%= certificado.fecha_aplicacion %></td>
              <td><%= certificado.codigo %></td>
              <td><%= link_to 'Detalle', certificado,:class => "btn btn-dark" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
</div>
</table>
</div>
    </div>
  </body>
</html>
