<div class="container">
  <h3>Resultados encontrados</h3>
  <div calss="container" style="overflow-y: scroll; height:400px; overflow-x: scroll; width:1000px">
   <table>
     <thead>
        <tr>
          <th>Apellido</th>
          <th>Nombre</th>
          <th>Domicilio</th>
          <th>Telefono</th>
          <th>Celular</th>
          <th>Rubro</th>
          <th>Tipo de Cliente</th>
          <th>CUIT</th>
          <th>Correo</th>
          <th>Generar Certificado</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
          <%if result.estado == true %>
            <tr>
            <td><%= result.apellido %></td>
            <td><%= result.nombre %></td>
            <td><%= result.domicilio %></td>
            <td><%= result.telefono %></td>
            <td><%= result.celular %></td>
            <td><%= result.rubro %></td>
            <td><%= result.cliente_tipo %></td>
            <td><%= result.cuit %></td>
            <td><%= result.correo %></td>
            <td><%= link_to  'Detalle', result,:class => "btn btn-dark" %></td>
            <td><%= link_to 'Eliminar', cliente_path(result),:class => "btn btn-dark", method: :delete, data: { confirm: "¿Estás seguro/a?" }  %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
