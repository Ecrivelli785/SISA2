<div class="container">
<h3>Resultados encontrados</h3>
<div calss="container" style="overflow-y: scroll; height:400px; overflow-x: scroll; width:1000px">
 <table>
 <thead>
    <tr>
      <th>Nro certificado</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Tratamiento</th>
      <th>Vectores</th>
      <th>Superficie</th>
      <th>Veneno</th>
      <th>Fecha aplicacion</th>
      <th>Hora aplicacion</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
    <%if result.estado == true &&  result.hora_aplicacion != nil %>
      <tr>
        <div onclick="location.href='YOUR-URL-HERE';" style="cursor: pointer;">
        <ul>
        <td><%= result.nro_certificado %></td>
        <td><%= result.cliente.nombre  %></td>
        <td><%= result.cliente.apellido  %></td>
        <td><%= result.tratamiento  %></td>
        <td><%= result.vector  %></td>
        <td><%= result.superficie  %></td>
        <td><%= result.droga  %></td>
        <td><%= result.fecha_aplicacion  %></td>
        <td><%= result.hora_aplicacion %></td>
        <td><%= result.codigo  %></td>
        <td><%= link_to 'Detalle', result,:class => "btn btn-dark" %></td>
        <td><%= link_to 'Eliminar', certificado_path(result), method: :delete, data: { confirm: '¿Estás seguro/a?' },:class => "btn btn-dark" %></td>
      </div>
        </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
</div>
