<p id="notice"><%= notice %></p>

<div class="container">
<div class="d-flex justify-content-between">
  <div>
    <h1>Clientes</h1>
  </div>
  <div>
    <%= link_to 'Nuevo Cliente', new_cliente_path, class: 'btn btn-success btn-cliente' %>
  </div>
</div>

<%= form_tag(search_page_path, :method => "get") %>
  <div class="input-group my-3">
    <%= search_field_tag :search, params[:search], placeholder: "Buscar...", class: "form-control" %>
  </div>

<div calss="container" style="overflow-y: scroll; height:500px; overflow-x: scroll; width:100%">
<table>
  <thead>
    <tr>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Rubro</th>
      <th>Domicilio</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>CUIT</th>
      <th>Correo</th>
      <th>Tipo Cliente</th>
      <th>Detalle</th>
      <th>Eliminar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <%if cliente.estado == true %>
        <tr>
          <td><%= cliente.apellido %></td>
          <td><%= cliente.nombre %></td>
          <td><%= cliente.rubro %></td>
          <td><%= cliente.domicilio %></td>
          <td><%= cliente.telefono %></td>
          <td><%= cliente.celular %></td>
          <td><%= cliente.cuit %></td>
          <td><%= cliente.correo %></td>
          <td><%= cliente.cliente_tipo %></td>
          <td><%= link_to  'Detalle', cliente,:class => "btn btn-dark" %></td>
          <td><%= link_to 'Eliminar', cliente,:class => "btn btn-dark", method: :delete, data: { confirm: "¿Estás seguro/a?" }  %></td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>


