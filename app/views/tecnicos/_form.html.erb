
<%= simple_form_for(@tecnico) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :dni %>
    <%= f.input :apellido %>
    <%= f.input :nombre %>
    <%= f.input :domicilio %>
    <%= f.input :telefono %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
