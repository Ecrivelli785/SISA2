<p id="notice"><%= notice %></p>
<div class="container">
<div class="d-flex justify-content-between">
  <div>
    <h1>Certificados</h1>
  </div>
   <!-- Trigger/Open The Modal -->
<button class=" btn btn-success btn-cliente" id="myBtn">Nuevo certificado</button>
<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h5>Ingrese datos del cliente</h5>
    <%= form_tag(search_page_path, :method => "get") do %>
  <div class="input-group my-3">
    <%= search_field_tag :search, params[:search], placeholder: "Ingrese CUIT u otro dato del cliente", class: "form-control" %>
  </div>
<% end %>

  </div>

</div>

</div>
  <%= form_tag(searchcertificado_page_path, :method => "get",:calss => "btnn") do %>
<div class="input-group my-3">
  <%= search_field_tag :search, params[:search], placeholder: "Buscar...", class: "form-control" %>
</div>
<% end %>

<div class="container" style="overflow-y: scroll; height:500px; overflow-x: scroll; width:100%">
<table>
  <thead>
    <tr>
      <th>Nro certificado</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Domicilio</th>
      <th>Rubro</th>
      <th>Tratamiento</th>
      <th>Vectores</th>
      <th>Superficie</th>
      <th>Veneno</th>
      <th>Fecha aplicacion</th>
      <th>Codigo</th>
      <th>Turno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificados.each do |certificado| %>
      <%if certificado.estado == true &&  certificado.hora_aplicacion != nil%>
        <tr>
          <td><%= certificado.nro_certificado %></td>
          <td><%= certificado.cliente.apellido%></td>
          <td><%= certificado.cliente.nombre  %></td>
          <td><%= certificado.cliente.domicilio %></td>
          <td><%= certificado.cliente.rubro[0,15] %></td>
          <td><%= certificado.tratamiento %></td>
          <td><%= certificado.vector %></td>
          <td><%= certificado.superficie %></td>
          <td><%= certificado.droga  %></td>
          <td><%= certificado.fecha_aplicacion %></td>
          <td><%= certificado.codigo %></td>
          <td><%= certificado.turno %></td>
          <td><%= link_to 'Detalle', certificado,:class => "btn btn-dark" %></td>
          <td><%= link_to 'Eliminar', certificado, method: :delete, data: { confirm: '¿Estás seguro/a?' },:class => "btn btn-dark" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</div>
</table>
</div>
<script>
  // Get the modal
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on the button, open the modal

btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>



